[
  {
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "{{site.data.metadata.title_short}}",
    "description": "{{site.data.metadata.desc}}",
    "url": "https://algonquindesign.ca",
    "image": "https://algonquindesign.ca/favicon-152.png",
    "video": {
      "@type": "VideoObject",
      "name": "{{site.data.curriculum.video_link}}",
      "description": "{{site.data.curriculum.video_link}}",
      "uploadDate": "2015-04-22",
      "thumbnailURL": "https://algonquindesign.ca/images/{{site.data.curriculum.video_poster}}",
      "embedUrl": "https://www.youtube.com/embed/{{site.data.curriculum.youtube_id}}"
    },
    "dateModified": "{{site.time}}",
    "copyrightYear": "{{site.time | date:'%Y'}}",
    "keywords": "{{site.data.metadata.keywords}}",
    "author": {
      "@id": "#algonquin"
    }
  },
  {
    "@context": "https://schema.org",
    "@type": "CollegeOrUniversity",
    "@id": "#algonquin",
    "name": "Algonquin College Graphic Design",
    "image": "https://algonquindesign.ca/favicon-152.png",
    "url": "https://algonquindesign.ca",
    "description": "{{site.data.metadata.desc}}",
    "location": {
      "@type": "PostalAddress",
      "streetAddress": "1385 Woodroffe Ave.",
      "addressLocality": "Ottawa",
      "addressRegion": "ON",
      "postalCode": "K2G 1V8",
      "addressCountry": "CA"
    },
    "aggregateRating": {
      "@type": "AggregateRating",
      "reviewCount": {{site.data.testimonials | size}},
      "ratingValue": 5
    },
    "reviews": [
      {% for quote in site.data.testimonials %}
        {
          "@type": "Review",
          "author": "{{quote.author}}",
          "image": "https://algonquindesign.ca/images/testimonials/{{quote.image}}",
          "comment": "{{quote.text}}",
          "reviewRating": {
            "@type": "Rating",
            "ratingValue": 5
          }
        }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
]
